{
  "name": "python-code-reviewer",
  "displayName": "Python Code Reviewer",
  "description": "A VSCode extension for reviewing Python code with pylint",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "python-code-reviewer.reviewCode",
        "title": "Review Python Code",
        "icon": "$(checklist)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == python",
          "command": "python-code-reviewer.reviewCode",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}